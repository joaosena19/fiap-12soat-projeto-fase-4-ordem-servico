{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDB": {
    "ConnectionString": "",
    "DatabaseName": ""
  },
  "Jwt": {
    "Key": "",
    "Issuer": "OficinaMecanicaApi",
    "Audience": "AuthorizedServices"
  },
  "Webhook": {
    "HmacSecret": ""
  },
  "Argon2HashingOptions": {
    "SaltSize": 16,
    "HashSize": 32,
    "Iterations": 4,
    "MemorySize": 65536,
    "DegreeOfParallelism": 1
  },
  "ExternalServices": {
    "CadastroBaseUrl": "http://cadastro-service.default.svc.cluster.local",
    "EstoqueBaseUrl": "http://estoque-service.default.svc.cluster.local"
  },
  "AllowedHosts": "*"
}
